# I used functions so if our code dose not pass check it wont be added to a list. 
def data (name,point):

    if point == int:
        print(name,point)
        print('Data string: %s' % name)
        print('Data integer: %s' % point)
        datastring.append(name)
        dataint.append(point) 
    else:
        print('Error not int')
       

